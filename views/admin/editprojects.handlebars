{{#each errors}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar Projeto: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/projects/edit" method="POST">
            <input type="hidden" name="id" value="{{id}}">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do Projeto" class="form-control" value='{{name}}'>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug do Projeto" class="form-control" value='{{slug}}'>
            <br>
            <button type="submit" class="btn btn-success">Editar Projeto</button>
        </form>
    </div>
</div>